<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>
   <extension
         point="org.eclipse.ui.popupMenus">
      <objectContribution
            adaptable="false"
            id="org.but4reuse.adapters.ui.showElements"
            objectClass="org.but4reuse.artefactmodel.Artefact">
         <action
               class="org.but4reuse.adapters.ui.actions.ShowElementsAction"
               icon="icons/show.png"
               id="org.but4reuse.adapters.ui.action.showElements"
               label="Show elements"
               menubarPath="additions">
         </action>
      </objectContribution>
      <objectContribution
            id="org.but4reuse.adapters.ui.showElementDependencies"
            objectClass="org.but4reuse.artefactmodel.Artefact">
         <action
               class="org.but4reuse.adapters.ui.actions.ShowElementDependenciesAction"
               enablesFor="1"
               icon="icons/show.png"
               id="org.but4reuse.adapters.ui.showElementDependencies"
               label="Show element dependencies"
               menubarPath="additions">
         </action>
      </objectContribution>
   </extension>
   <extension
         point="org.eclipse.ui.preferencePages">
      <page
            category="org.but4reuse.page"
            class="org.but4reuse.adapters.ui.preferences.SimilarityPreferencePage"
            id="org.but4reuse.adapters.ui.preferences.SimilarityPreferencePage"
            name="Similarity">
      </page>
      <page
            category="org.but4reuse.page"
            class="org.but4reuse.adapters.ui.preferences.AdaptersPreferencePage"
            id="org.but4reuse.adapters.ui.preferences.AdaptersPreferencePage"
            name="Adapters">
      </page>
   </extension>
	   <extension
         point="org.eclipse.ui.viewActions">
      <viewContribution
            id="org.but4reuse.adapters.ui.construct"
            targetID="org.eclipse.contribution.visualiser.views.Menu">
         <action
               class="org.but4reuse.adapters.ui.actions.ConstructViewAction"
               icon="icons/construct.png"
               id="org.but4reuse.adapters.ui.constructaction"
               label="Construct"
               style="push"
               toolbarPath="additions">
         </action>
      </viewContribution>
      </extension>
      	   <extension
         point="org.eclipse.ui.viewActions">
      <viewContribution
            id="org.but4reuse.adapters.ui.constructseparately"
            targetID="org.eclipse.contribution.visualiser.views.Menu">
         <action
               class="org.but4reuse.adapters.ui.actions.ConstructSeparatelyViewAction"
               icon="icons/constructSeparately.png"
               id="org.but4reuse.adapters.ui.constructseparatelyaction"
               label="Construct separately"
               style="push"
               toolbarPath="additions">
         </action>
      </viewContribution>
      </extension>
      	   <extension
         point="org.eclipse.ui.viewActions">
      <viewContribution
            id="org.but4reuse.adapters.ui.showblockelements"
            targetID="org.eclipse.contribution.visualiser.views.Menu">
         <action
               class="org.but4reuse.adapters.ui.actions.ShowBlockElementsAction"
               icon="icons/show.png"
               id="org.but4reuse.adapters.ui.showblockelementsaction"
               label="Show Block Elements"
               style="push"
               toolbarPath="additions">
         </action>
      </viewContribution>
      </extension>
</plugin>
